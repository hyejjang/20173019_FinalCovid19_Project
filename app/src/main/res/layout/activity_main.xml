<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#d6bbbb"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/CovidBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="180dp"
        android:backgroundTint="#9A7480"
        android:onClick="OnClickedCovidBtn"
        android:text="코로나 감염 현황"
        android:textSize="18dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/CovidpreventionBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:backgroundTint="#9A7480"
        android:text="코로나 예방 방법"
        android:textSize="18dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/CovidvaccineBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:backgroundTint="#9A7480"
        android:onClick="OnClickedCovidvaccineBtn"
        android:text="코로나 백신 예약"
        android:textSize="18dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/selfBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:backgroundTint="#9A7480"
        android:text="코로나 자가 진단"
        android:textSize="18dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/backButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:backgroundTint="#9A7480"
        android:text="로그인 화면으로"
        android:textSize="18dp"
        android:textStyle="bold" />

</LinearLayout>